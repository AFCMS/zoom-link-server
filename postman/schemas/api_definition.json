{
  "openapi": "3.1.0",
  "info": {
    "version": "v0.0",
    "title": "Zoom Link Server API",
    "description": "Interact with the service"
  },
  "paths": {
    "/api/all": {
      "get": {
        "summary": "Get all entries",
        "responses": {
          "200": {
            "description": "The list of all entries",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EntryList"
                }
              }
            }
          },
          "500": {
            "description": "An error occured when interacting with database",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/create": {
      "post": {
        "summary": "Create a new entry",
        "responses": {
          "200": {
            "description": "The list of all entries",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EntryList"
                }
              }
            }
          },
          "400": {
            "description": "An error occured",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EntryID": {
        "description": "The unique identifier of an  entry",
        "type": "string"
      },
      "Entry": {
        "type": "object",
        "required": [
          "id",
          "name",
          "type"
        ],
        "properties": {
          "id": {
            "$ref": "#/components/schemas/EntryID"
          },
          "description": {
            "type": "string"
          },
          "creation_date": {
            "type": "integer"
          }
        }
      },
      "EntryList": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Entry"
        }
      }
    }
  }
}